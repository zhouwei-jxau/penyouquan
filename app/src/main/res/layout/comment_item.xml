<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_headpartrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/default_headpartrait" />

        <LinearLayout
            android:id="@+id/user_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="相忘于江湖"
                android:textColor="#3867ff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="这里的是用来测试的一段文字。。。。。。。。。"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/loading"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/loading"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/loading"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/loading"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/loading"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/loading"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/loading"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/loading"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/image9"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/loading"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/function_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_lookThroughNum"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="浏览0次"
                    android:textSize="16dp" />

                <com.example.zhouwei.comments.ThumbUpImageView
                    android:id="@+id/imageView_thumbUp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/thumbup" />

                <ImageView
                    android:id="@+id/image_topics"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/comment_commuit" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/like_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.zhouwei.comments.ThumbUpTextView
                    android:id="@+id/textView_thumbUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:maxHeight="200dp"
                    android:maxLines="3"
                    android:text="xxx等x人觉得很赞"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.zhouwei.comments.ThumbUpTextView
                    android:id="@+id/textView_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:maxHeight="200dp"
                    android:maxLines="3"
                    android:text="发布于"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tag_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.zhouwei.comments.ThumbUpTextView
                    android:id="@+id/textView_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:maxHeight="200dp"
                    android:maxLines="3"
                    android:text="雪落无痕，雁过留声。"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/discuss_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_discuss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="textView" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sendMessage_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_editMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="6dp"
                    android:hint="说点什么吧"
                    android:inputType="textPersonName" />

                <com.example.zhouwei.comments.DiscussButton
                    android:id="@+id/button_sendMessage"
                    android:layout_width="80dp"
                    android:layout_height="46dp"
                    android:layout_weight="0"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:text="发送" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>